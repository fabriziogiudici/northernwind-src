<web-app id="WebApp_ID" version="2.5" xmlns="http://java.sun.com/xml/ns/javaee" xmlns:web="http://java.sun.com/xml/ns/javaee/web-app_2_5.xsd" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://java.sun.com/xml/ns/javaee http://java.sun.com/xml/ns/javaee/web-app_2_5.xsd">
    <display-name>NorthernWind (Jersey Frontend)</display-name>

    <fragments>
        <fragment>configuration-listeners</fragment>
        <fragment>logging-listeners</fragment>
<!--        <fragment>spring-listeners</fragment>-->
        <fragment>logback-admin</fragment>
        <fragment>jetty-gzip-filter</fragment>
<!--        <fragment>nw-response-header-filter</fragment>-->
    </fragments>
    
    <!-- Spring configuration for session-scoped beans -->
    <listener>
        <listener-class>org.springframework.web.context.request.RequestContextListener</listener-class>
    </listener>

    <!-- Jersey (REST) configuration -->
    <!-- TODO: use the InitializationDispatcherServletDelegate when it's able to run with an arbitrary delegate -->
    <servlet>
        <servlet-name>JerseyServlet</servlet-name>
        <servlet-class>com.sun.jersey.spi.container.servlet.ServletContainer</servlet-class>
        <init-param>
            <param-name>com.sun.jersey.config.property.packages</param-name>
            <param-value>it.tidalwave.northernwind.frontend.jersey</param-value>
        </init-param>
        <load-on-startup>1</load-on-startup>
    </servlet>
    <servlet-mapping>
        <servlet-name>JerseyServlet</servlet-name>
        <url-pattern>/*</url-pattern>    
    </servlet-mapping>
    
</web-app>
