    <!-- Vaadin configuration -->
    <!-- TODO: use the InitializationDispatcherServletDelegate when it's able to run with an arbitrary delegate -->
    <servlet>
        <servlet-name>Vaadin Application Servlet</servlet-name>
        <servlet-class>it.tidalwave.northernwind.frontend.vaadin.SpringApplicationServlet</servlet-class>
        <init-param>
            <param-name>applicationBean</param-name>
            <param-value>frontEndWebApp</param-value>
        </init-param>
        <load-on-startup>2</load-on-startup>
        <!--        <init-param>
            <param-name>widgetset</param-name>
            <param-value>foo.SomethingWidgetSet</param-value>
        </init-param>-->
    </servlet>
    <servlet-mapping>
        <servlet-name>Vaadin Application Servlet</servlet-name>
        <url-pattern>/*</url-pattern>
    </servlet-mapping>    
    <context-param>
        <param-name>productionMode</param-name>
        <param-value>false</param-value>
    </context-param>
    
    <!-- LogBack status viewer -->
    <servlet>
        <servlet-name>LogBackViewStatusMessages</servlet-name>
        <servlet-class>ch.qos.logback.classic.ViewStatusMessagesServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>LogBackViewStatusMessages</servlet-name>
        <url-pattern>/admin/logback</url-pattern>
    </servlet-mapping>
    
    <!--  -->
    <filter>
        <filter-name>NorthernWindResponseHeaderFilter</filter-name>
        <filter-class>it.tidalwave.northernwind.frontend.util.NorthernWindResponseHeaderFilter</filter-class>
    </filter>
    <filter-mapping>
        <filter-name>NorthernWindResponseHeaderFilter</filter-name>
        <url-pattern>/*</url-pattern>
    </filter-mapping>       
</web-app>
