<web-app id="WebApp_ID" version="2.5" xmlns="http://java.sun.com/xml/ns/javaee" xmlns:web="http://java.sun.com/xml/ns/javaee/web-app_2_5.xsd" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://java.sun.com/xml/ns/javaee http://java.sun.com/xml/ns/javaee/web-app_2_5.xsd">
    <display-name>NorthernWind (Vaadin Frontend)</display-name>

    <listener>
        <listener-class>it.tidalwave.northernwind.frontend.util.ExternalConfigurationServletContextListener</listener-class>
    </listener>
    <listener>
        <listener-class>it.tidalwave.northernwind.frontend.util.PerformanceHostingConfigurationServletContextListener</listener-class>
    </listener>
    <listener>
        <listener-class>it.tidalwave.northernwind.frontend.util.SystemConfigurationLoggerServletContextListener</listener-class>
    </listener>
    <listener>
        <listener-class>it.tidalwave.northernwind.frontend.util.Slf4JJulBrigdeInstallerServletContextListener</listener-class>
    </listener>
    
    <!-- Spring configuration for webapps -->
    <listener>
        <listener-class>it.tidalwave.northernwind.frontend.util.InitializationDiagnosticsServletContextListenerDecorator</listener-class>
    </listener>
    
    <!-- Spring configuration for session-scoped beans -->
    <listener>
        <listener-class>org.springframework.web.context.request.RequestContextListener</listener-class>
    </listener>
    
